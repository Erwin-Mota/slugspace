// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ğŸ“ Core User Model - Secure & Scalable
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  
  // ğŸ” UCSC Identity
  ucscId    String?  @unique
  major     String?
  year      String?
  college   String?  // Which UCSC college they're in
  
  // ğŸ­ Personality & Preferences (stored as JSON for flexibility)
  personalityTraits Json? // hobbies, interests, religion, sports, academic focus
  
  // ğŸ“š Academic & Social Connections
  joinedClubs      ClubMember[]
  studyGroups      StudyGroupMember[]
  
  // ğŸ•’ Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // ğŸš€ Performance Indexes
  @@index([email])
  @@index([ucscId])
  @@index([major])
  @@index([college])
  
  // ğŸ“ Add some flair to the model name
  @@map("ucsc_sluggers")
}

// ğŸ›ï¸ Club Membership Model
model ClubMember {
  id        String   @id @default(cuid())
  userId    String
  clubId    String
  role      String   @default("member") // member, admin, founder
  joinedAt  DateTime @default(now())
  
  // ğŸ”— Relationships
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  club      Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  
  // ğŸš€ Performance & Constraints
  @@unique([userId, clubId])
  @@index([userId])
  @@index([clubId])
  
  // ğŸ“ Add some flair
  @@map("club_crew")
}

// ğŸ“š Study Group Membership Model
model StudyGroupMember {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  role      String   @default("student") // student, tutor, leader
  joinedAt  DateTime @default(now())
  
  // ğŸ”— Relationships
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // ğŸš€ Performance & Constraints
  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  
  // ğŸ“ Add some flair
  @@map("study_buddies")
}

// ğŸ¯ Club Model (from your existing JSON data)
model Club {
  id          String   @id @default(cuid())
  name        String
  category    String
  description String?
  contactInfo String?
  meetingTime String?
  
  // ğŸ”— Relationships
  members     ClubMember[]
  
  // ğŸš€ Performance
  @@index([category])
  @@index([name])
  
  // ğŸ“ Add some flair
  @@map("campus_clubs")
}

// ğŸ“– Course Model (from your existing JSON data)
model Course {
  id          String   @id @default(cuid())
  code        String   // e.g., "CSE 101"
  name        String
  credits     Int?
  level       String?
  description String?
  prerequisites String?
  quartersOffered String?
  
  // ğŸ”— Relationships
  studyGroups StudyGroupMember[]
  
  // ğŸš€ Performance
  @@index([code])
  @@index([name])
  @@index([level])
  
  // ğŸ“ Add some flair
  @@map("ucsc_courses")
}

// ğŸ  College Model (from your existing JSON data)
model College {
  id            String   @id @default(cuid())
  name          String   @unique
  stereotype    String?
  housingQuality String?
  funFact       String?
  vibes         String?
  imageUrl      String?
  
  // ğŸš€ Performance
  @@index([name])
  
  // ğŸ“ Add some flair
  @@map("ucsc_colleges")
}
